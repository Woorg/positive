// General body styles

.page
	background #fff
	font-display swap
	font-family $h
	font-size 24px
	color #666666
	tr(font-size .3s ease)
.in
	margin auto
	padding-left 10px
	padding-right 10px
	max-width 960px
	min-width 320px
	// width 940px
	height 100%
.section
	width 100%
	overflow hidden
.button
	padding-top 5px
	padding-right 24px
	padding-bottom 6px
	padding-left 22px
	border 2px solid #ffffff
	min-height 30px
	display inline-block
	vertical-align top
	font-family $d
	font-size 18px
	line-height 1
	text-transform uppercase
	text-decoration none
	border-radius 30px
.title
	font-size 72px
	line-height 1.4
	font-family $h
	color #1c1c1c
.text
	font-family $h
	font-size 24px
	line-height 1.166666667
