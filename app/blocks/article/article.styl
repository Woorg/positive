.article
	padding-top 10px
	width 262px
	height 346px
	border 1px solid #dadada
	background-color #ffffff
	box-shadow 1px 2px 2px rgba(158, 158, 158, 0.1)
	&__link
		display block
		text-decoration none
	&__image
		margin-bottom 10px
		height 194px
		img
			display block
			max-width 100%
			height auto
			object-fit cover
	&__category
		margin-bottom 9px
		padding-left 15px
		padding-right 22px
		text-decoration underline
		color #7474fe
		font-family $d
		font-size 10px
		text-transform uppercase
	&__title
		margin-bottom 14px
		padding-left 15px
		padding-right 25px
		font-family $d
		font-size 18px
		line-height 1.2
		color #1a1a1a
		white-space normal
	&__bottom
		margin-left 15px
		margin-right 25px
		padding-top 10px
		padding-bottom 10px
		border-top 1px solid #c9c9c9
		text-align center
		clr()
	&__date,
	&__more
		display inline-block
		vertical-align middle
		font-family Direct
		font-size 10px
		color #999999
	// &__date

	&__more
		float right
		retinaSprite($article_more_group)
		hide-text()
		color #6868fb
